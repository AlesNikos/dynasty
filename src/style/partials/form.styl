.form
    &--search
        display flex
        flex-wrap nowrap
        align-items flex-start
        @media phone
            flex-direction column

    &__row
        &:not(:last-child)
            margin 0 0 22px 0
    &__group
        width 100%
        &--checkbox
            margin 50px 0
        &--checkbox-dates
            margin 0

    &__label 
        color #afafaf
        font-size 16px
        font-weight 400
        line-height 26px
        span {
            color #a4023e
        }

    &__input
        box-sizing border-box
        width 100%
        padding 9px 15px 8px 15px
        font-family "Spectral"
        font-size 20px
        line-height 28px
        font-weight 300
        color black
        border 1px solid #e9e9e9
        border-radius 10px
        outline none
        background-color white

        &--rounded
            padding 9px 30px 8px 30px
            border-radius 23.5px

        &::placeholder
            font-family "Spectral"
            font-size 20px
            line-height 28px
            font-weight 300
            color black

        &.error 
            border-color #a4023e

    &__textarea
        display block
        width 100%
        min-height 157px
        padding 9px 15px 8px 15px
        font-size 20px
        line-height 28px
        font-weight 300
        color black
        border 1px solid #e9e9e9
        border-radius 10px
        outline none
        background-color white
        resize none
        &.error
            border-color #a4023e

    &__checkbox
        &-input  
            display none
            &:checked + .form__checkbox-label:after
                opacity 1
            &.error + .form__checkbox-label:before
                border-color #a4023e
        &-label
            position relative
            display inline-flex
            align-items center
            cursor pointer
            @media phone
                align-items flex-start

            &:before
                content ''
                flex-shrink: 0
                display inline-block
                width 28px
                height 28px
                margin-right 7px
                border-radius 10px
                border 1px solid #e9e9e9
                background-color #ffffff
            &:after
                content ''
                flex-shrink: 0
                position absolute
                top 1px
                left 1px
                width 28px
                height 28px
                background: url('../images/icons/icon-check.svg') no-repeat center
                opacity 0
                transition 0.3s ease
            a
                color #a4023e
                text-decoration none
                border-bottom: 1px solid #a4023e
                transition 0.3s ease 
                &:hover 
                    border-color: transparent

    &__dates-inputs
        display flex
        flex-wrap wrap
        margin-top 8px
        .form__checkbox-label
            margin-right 27px
            @media phone
                margin-bottom 14px    
    &--main
        & .form__row
            display flex
            flex-wrap wrap
            margin 0 -18px
            // &:not(:last-child)
            //     margin-bottom 26px
        & .form__group-wrap
            position relative
            flex 0 0 50%
            max-width 50%
            width 100%
            padding 0 18px
            margin-bottom 15px
            // &:last-child
            //     margin-bottom 0
            @media tablet-portrait-large
                flex 0 0 100%
                max-width 100%
            .form__group
                flex 0 0 100%
                max-width 100%
                padding 0
                &:last-of-type
                    margin 0
            .form__textarea
                min-height: 241px

        & .form__group
            position relative
            flex 0 0 50%
            max-width 50%
            width 100%
            padding 0 18px
            margin-bottom 26px
            // &:last-child
            //     margin-bottom 0
            @media tablet-portrait-large
                flex 0 0 100%
                max-width 100%
        & .form__group--checkbox
            flex 0 0 100%
            max-width 100%
            margin 24px 0 39px
            text-align center
            @media tablet-portrait-small 
                text-align left
        & .form__group--button
            flex 0 0 100%
            max-width 100%
            margin-bottom 0
            text-align center

        & .opinion
            margin-top 14px
        & .opinion__name
            font-size 16px
            font-weight 400
            line-height 26px
        & .form__textarea
            min-height 144px



    &__search-button
        flex-shrink 0
        margin 0 0 0 36px
        @media laptop
            margin 0 0 0 32px
        @media tablet-portrait-small
            margin 0 0 0 20px

.form--search
    & .form__group
        flex-grow 1
        @media phone 
            margin-bottom 20px
    .form__search-button
        @media phone
            margin 0

.choices 
    &__inner 
        position relative
        padding 9px 15px 8px 15px
        font-size 20px
        line-height 28px
        font-weight 400
        color #000
        border 1px solid #e9e9e9
        border-radius 10px
        outline none
        background-color white
        overflow hidden
        white-space nowrap
        &:before
            @media phone 
                content ''
                position absolute
                right 0
                top 0
                bottom 0
                width 75px
                // height 100%
                background linear-gradient(to left, #fff 0 50%, rgba(255, 255, 255, 0))
                z-index 1
    &__list
        &--dropdown 
            max-height 183px
            box-shadow 3px 4px 30px rgba(0, 0, 0, 0.15)
            border-radius 10px
            background-color #fff
            z-index 3
            .choices__item
                padding 0
                font-size 20px
                line-height 28px
                font-weight 400
                color #000
                border-bottom 0
                &:not(:nth-child(1))
                    padding 9px 15px 8px 15px
                &--selectable.is-highlighted 
                    background-color #f5f5f5
                    color #000
    &[data-type*='select-one']:after
        right 17px
        top 20px
        width 15px
        height 9px
        margin-top 0
        background-image: url('../images/icons/icon-arrow-down.svg')
        background-size 100%
        transition transform 0.3s ease
        z-index 2
    
    &[data-type*='select-one'] 
        .choices__inner 
            padding-bottom 8px

    &__item 
        &--selectable
            @media phone 
                padding-right 20px

.choices__list--dropdown::-webkit-scrollbar
    border-radius 0 10px 10px 0
    width 6px
    background-color #fff
.choices__list--dropdown::-webkit-scrollbar-thumb
    border-radius 2px
    background-color #a4023e

.is-flipped .choices__list--dropdown
    box-shadow 3px 4px 30px rgba(0, 0, 0, 0.15)
    border-radius 10px
    margin-top 10px

.opinion
    margin-top 50px
    &__title
        margin-bottom 29px
        color #000
        font-size 26px
        font-weight 400
        line-height 30px
    &__row
        display flex
        align-items center
        &:not(:last-of-type) 
            margin 0 0 30px 0
        @media tablet-portrait-small
            flex-direction column
            align-items flex-start
    &__name 
        margin-right 10px
        color #afafaf
        @media tablet-portrait-small
            margin 0 0 10px 0
    &__inputs
        display flex
        align-items center
    &__inputs-group
        margin-right 7px
    &__input 
        display none
        &:checked ~ .opinion__label
            color #fff
            background-color deep-pink
            border-color deep-pink
    &__label 
        display flex
        align-items center
        justify-content center
        width 47px
        height 47px
        border 1px solid light-gray
        background-color #fff
        color #000
        font-size 20px
        font-weight 400
        line-height 28px
        border-radius 50%
        cursor pointer
        transition 0.3s ease
        @media small-phone
            width 40px
            height 40px
        &:hover
            color deep-pink
            border-color: deep-pink
        &--not-number
            width 86px
            border-radius 24px

.main-form-container
    width calc(100% - 78px)
    max-width 1440px
    margin-left auto
    margin-right auto
    padding 62px 50px 68px
    border-radius 10px
    background-color lightest-gray
    @media tablet-landscape-medium
        width calc(100% - 64px)
    @media tablet-portrait-small
        width calc(100% - 40px)
    @media phone 
        padding 20px

    &__title
        margin 0 0 30px
        color #030404
        font-size 48px
        font-weight 400
        line-height 52px
        text-align center
        @media phone 
            font-size 32px
            line-height 36px
    &__subtitle
        max-width: 780px
        margin 0 auto 35px
        letter-spacing -0.36px
        text-align center
        span 
            color #a4023e
.information
  max-width 1130px
  width 100%
  margin 0 auto
  padding 0 39px 15px

  @media laptop 
    max-width 978px
  @media tablet-landscape-medium
    max-width 964px
    padding 0 32px 15px
  @media tablet-portrait-small
    padding 0 20px 15px

  &__title 
    margin 0 0 40px 0
    font-size 36px
    font-weight 400
    line-height 40px
    color black
  &__info
    margin-bottom 85px
  &__rules
    margin-bottom 93px
  &__locations
    margin-bottom 94px
  &__documents
    margin-bottom 63px
  &__licenses
    margin-bottom 63px
  


.rules
  &__items
    display flex
    flex-wrap wrap 
    margin 0 -18px
  &__item-wrap 
    position relative
    flex 0 0 50%
    max-width 50% 
    width 100%
    margin-bottom 32px
    padding 0 18px
    @media tablet-portrait-small
      flex 0 0 100%
      max-width 100%
    @media phone
      margin-bottom 12px
  &__item 
    display block
    height 100%
    padding 45px 50px 40px 49px
    border-radius 10px
    custom-border(#e2e2e2)
    background-color #fff
    text-decoration none
    transition box-shadow 0.3s ease
    @media phone
      padding 24px
    &:hover
      // .rules__item-text
      //   border-bottom-color transparent
      @media desktop-hover
        box-shadow 3px 4px 30px rgba(0, 0, 0, 0.15)
  &__item-text 
    font-size 26px
    font-weight 400
    line-height 30px
    color #000
    border-bottom 1px solid #000
    transition 0.3s
    @media phone
      font-size 22px
      line-height 26px
    &:hover
      border-bottom-color transparent
  &__buttons
    display flex
    justify-content center
    align-items center
    margin-top 31px

.documents
  &__items
    display flex
    flex-wrap wrap 
    margin 0 -18px
  &__item-wrap 
    position relative
    flex 0 0 50%
    max-width 50% 
    width 100%
    margin-bottom 32px
    padding 0 18px
    @media tablet-portrait-small
      flex 0 0 100%
      max-width 100%
    @media phone
      margin-bottom 12px
  &__item 
    display block
    height 100%
    padding 45px 50px 40px 49px
    border-radius 10px
    custom-border(#e2e2e2)
    background-color #fff
    text-decoration none
    transition box-shadow 0.3s ease
    @media phone
      padding 24px
    &:hover
      .documents__item-name
        border-bottom-color transparent
      @media desktop-hover
        box-shadow 3px 4px 30px rgba(0, 0, 0, 0.15)
  &__item-info
    margin-bottom 6px
    color gray
  &__item-name 
    font-size 26px
    font-weight 400
    line-height 30px
    color #000
    border-bottom 1px solid #000
    transition 0.3s
    @media phone
      font-size 22px
      line-height 26px
    // &:hover
    //   border-bottom-color transparent

.licenses
  &__items
    display flex
    flex-wrap wrap 
    margin 0 -18px
  &__item-wrap 
    position relative
    flex 0 0 25%
    max-width 25% 
    width 100%
    margin-bottom 32px
    padding 0 18px
    @media tablet-portrait-large
      flex 0 0 50%
      max-width 50%
    @media phone
      flex 0 0 100%
      max-width 100%
      margin-bottom 12px
  &__item 
    display flex
    align-items center
    justify-content center
    width 100%
    height 316px
    padding 32px 28px
    border-radius 10px
    custom-border(#e2e2e2)
    background-color #fff
    text-decoration none
    transition box-shadow 0.3s ease
    &:hover
      @media desktop-hover
        box-shadow 3px 4px 30px rgba(0, 0, 0, 0.15)
  &__item-img
    max-width 100%
    max-height 100%

.goverlay
  background rgba(255,255,255,0.95)
.glightbox-mobile .goverlay
  background rgba(255,255,255,0.97)
.glightbox-clean .gclose
  right 15px
  background-color #fff
  &:hover
    background-color #fff
.glightbox-clean .gprev, .glightbox-clean .gnext
  background-color #fff
  opacity 0.7
  &:hover
    background-color #fff
    opacity 1
.about
  &__items
    display flex
    flex-wrap wrap
    // margin 0 -18px
  &__item
    margin-bottom 32px
    @media tablet-portrait-medium
      margin-bottom 48px

    &:last-of-type
      margin-bottom 0

    &--left-img
      .about-item__info
        padding 0 96px 0 113px
        @media tablet-portrait-large 
          padding 0 48px
        @media tablet-portrait-medium
          padding 0

      .about-item__img 
        order -1
        margin 0 18px 0 0
        @media tablet-portrait-medium
          order 0
          margin 0
  &-item
    position relative
    width 100%

  &-item__inner
    display flex
    align-items center
    @media tablet-portrait-medium
      flex-direction: column

  &-item__heading
    margin 0 auto 143px
    max-width: 755px
    color #000000
    font-size 26px
    font-weight 400
    line-height 30px
    text-align center
    @media tablet-portrait-medium
      margin 0 auto 83px
      font-size 22px
      line-height 26px

  &-item__info
    flex: 0 0 50%
    max-width: 50%
    width 100%
    padding 0 96px
    @media tablet-portrait-large 
      padding 0 48px
    @media tablet-portrait-medium
      flex: 0 0 100%
      max-width: 100%
      padding 0
      margin-bottom 24px

    p:not([class])
      margin 0
      font-size 18px
      font-weight 400
      line-height 26px
      &:not(:last-child)
        margin-bottom 16px
    ul
      margin 0
      padding 0
      list-style none
      li
        position relative
        padding-left 35px
        letter-spacing -0.36px
        &:before
          content ""
          position absolute
          top 14px
          left 0
          display inline-block
          width 25px
          height 1px
          background-color deep-pink
          

  &-item__title
    margin 0 0 25px 0
    color #000
    font-size 26px
    font-weight 400
    line-height 30px
    @media tablet-portrait-medium
      font-size 22px
      line-height 26px
    
  &-item__img
    position relative
    // flex: 0 0 50%
    max-width: 702px
    height 600px
    margin 0 0 0 18px
    border-radius 10px
    overflow: hidden
    @media tablet-portrait-medium
      max-width: 100%
      max-height: 600px
      height auto
      margin 0

    img 
      width 100%
      height 100%
      object-fit cover

      @media tablet-portrait-medium
        max-width: 100%
        height auto

.about__item + .about__item .about-item__heading
  margin-top 111px
  @media tablet-portrait-medium
      margin-top 70px

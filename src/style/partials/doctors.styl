.doctors
  &__branch-filter
    max-width: 628px
    width 100%
    margin 0 auto 60px
  &__list
    display flex
    flex-wrap wrap
    margin 0 -18px
    @media laptop
      margin 0 -16px

  &__item-wrap
    position relative
    flex 0 0 25%
    max-width 25%
    padding 0 18px
    margin-bottom 36px
    @media laptop
      padding 0 16px
    @media tablet-landscape-medium
      flex 0 0 33.333333%
      max-width 33.333333%
    @media tablet-portrait-medium
      flex 0 0 50%
      max-width 50%
    @media phone
      flex 0 0 100%
      max-width 100%

  &-item
    &__img-wrap
      position relative
      display flex
      align-items center
      justify-content center
      width 100%
      height 400px
      margin-bottom 25px
      border-radius 10px
      background-color #c9ccd1
      overflow hidden
      transition transform 0.3s ease
      @media phone
        height 350px

      &:hover 
        .doctors-item__img 
          transform scale(1.1)

    &__img
      // max-width 100%
      transition transform 0.3s ease
      // position absolute
      // top 50%
      // left 50%
      // display block
      // transform translate(-50%, -50%)
    &__info
      text-align center
    &__name 
      margin 0 0 13px 0
      color #000
      font-size 18px
      font-weight 400
      line-height 22px
      letter-spacing -0.36px
      span 
        display block
        text-transform uppercase
        letter-spacing normal
    &__ranks
      display flex
      align-items center
      justify-content center
      flex-wrap wrap
      width 90%
      margin 0 auto
    &__rank
      color gray
      font-size 16px
      font-weight 400
      line-height 20px
      margin-bottom 10px
      &:not(:last-child)
        margin-right 19px
  .choices__list--dropdown 
    max-height 270px

  
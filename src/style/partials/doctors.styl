.doctors
  &__branch-filter
    max-width: 628px
    width 100%
    margin 0 auto 60px
  &__list
    display flex
    flex-wrap wrap
    margin 0 -18px
  &__item-wrap
    position relative
    flex 0 0 25%
    max-width 25%
    padding 0 18px
    margin-bottom 43px
  &-item
    &__img-wrap
      position relative
      display flex
      align-items center
      justify-content center
      width 100%
      height 400px
      margin-bottom 25px
      border-radius 10px
      background-color #c9ccd1
      overflow hidden
    // &__img
    //   position absolute
    //   top 50%
    //   left 50%
    //   display block
    //   transform translate(-50%, -50%)
    &__info
      text-align center
    &__name 
      margin 0 0 10px 0
      color #000
      font-size 18px
      font-weight 400
      line-height 22px
      letter-spacing -0.36px
      span 
        display block
        text-transform uppercase
        letter-spacing normal
    &__rank
      color gray
      font-size 16px
      font-weight 400
      line-height 20px
      &:not(:last-child)
        margin-right 19px
  .choices__list--dropdown 
    max-height 270px

  
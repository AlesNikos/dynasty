svg path,
svg line,
svg rect,
svg polygon,
svg circle
    fill inherit !important
    stroke inherit !important
    stroke-width inherit !important

button:focus
    outline none

custom-border(color)
    box-shadow: 1px 0 0 0 color, 0 1px 0 0 color, 1px 1px 0 0 color, 1px 0 0 0 color inset, 0 1px 0 0 color inset;

.common
    &__h1-heading
        margin 0
        font-family "Spectral"
        font-size 62px
        line-height 66px
        font-weight 400
        color black
        @media tablet-portrait-small
            font-size 48px
            line-height 52px
        @media phone
            font-size 36px
            line-height 40px

        &--white
            color white

    &__h2-heading
        margin 0
        color #000000
        font-size 48px
        font-weight 400
        line-height 52px
        @media phone
            font-size 32px
            line-height 36px

    &__h4-heading
        margin 0
        font-family "Spectral"
        font-size 26px
        line-height 30px
        font-weight 300
        color black
        @media tablet-landscape-medium
            font-size 22px
            line-height 26px

        &--white
            color white       

    &__link
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color black
        text-decoration none
        outline none
        border-bottom 1px solid black
        transition border .3s 0s ease 

        &:hover
            border-bottom 1px solid transparent

        &--backing
            display inline-block
            padding 9px 25px 8px 25px
            color white
            background-color deep-pink
            border none
            border-radius 19.5px
            transition background-color .3s 0s ease 

            &:hover
                // background-color bright-pink
                border none

        &--large
            font-size 26px
            line-height 24px
            @media tablet-landscape-medium
                font-size 22px
                line-height 26px

    &__button
        padding 9px 25px 8px 25px
        font-family "Spectral"
        font-size 18px
        line-height 22px
        font-weight 300
        color white
        text-align left
        background-color deep-pink
        border none
        border-radius 19.5px
        outline none
        transition background-color .3s 0s ease
        cursor pointer

        &--medium
            font-size 20px
            line-height 24px
            padding 12px 30px 11px 30px
            border-radius 23.5px

        &--large
            font-size 26px
            line-height 30px
            padding 12px 30px 11px 30px
            border-radius 26.5px
            @media tablet-landscape-medium
                font-size 22px
                line-height 26px

        &--no-backing
            padding 0
            color black
            background none
            transition color .3s 0s ease

            & svg
                display inline-block
                margin 0 7px 0 0
                vertical-align text-top
                fill none
                stroke black
                stroke-width 1.2px
                transition stroke .3s 0s ease

            &:hover
                color bright-pink

                & svg
                    stroke bright-pink

        &--underline
            border-bottom 1px dotted black
            border-radius 0
            transition border .3s 0s ease

            &:hover
                color black
                border-bottom 1px dotted transparent
            
    &__wysiwyg
        & p:not([class])
            margin 0
            font-family "Spectral"
            font-size 18px
            line-height 26px
            font-weight 300
            color black
            letter-spacing: -0.36px;
            & + h3 
                margin-top 84px

        & p:not([class]) + p:not([class])
            margin 18px 0 0 0

        &--white
            & p:not([class])
                color white

        & h2 
            color black
            font-size 48px
            font-weight 400
            line-height 52px
            @media tablet-portrait-small
                font-size 32px
                line-height 36px
        h3 
            color black
            font-size 36px
            font-weight 400
            line-height 40px
            @media phone 
                font-size 30px
                line-height 34px

        h6
            color: #000
            font-size 18px
            font-weight 700
            line-height 26px

        & ul:not([class])
            margin 0
            padding 0
            list-style none
            & li:not([class])
                position relative
                padding-left 35px
                letter-spacing -0.36px
                &:before
                    content ""
                    position absolute
                    top 14px
                    left 0
                    display inline-block
                    width 25px
                    height 1px
                    background-color deep-pink
            & + h3 
                margin-top 84px
                @media phone
                    margin-top 54px
        &--custom
            & p:not([class]) + p:not([class])
                margin 24px 0 0

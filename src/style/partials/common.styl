@keyframes bubble
    0%
        width 0
        height 0
        opacity 1
    100%
        width 400%
        height 400%
        opacity 0

.bubble
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    border-radius 50%
    animation bubble
    animation-timing-function linear
    &-container 
        position absolute
    &-hover 
        position relative
        overflow hidden
        &__button
            & .bubble-container
                opacity .6

            & .bubble
                background-color white
                animation-duration .4s
        &__card
            & .bubble-container
                opacity 1

            & .bubble
                background-color #fafafa
                animation-duration .8s

.js-content-is-hidden
    display none

.tags
    display flex
    align-items center
    flex-wrap: wrap
    &__tag
        padding 5px 25px
        margin-bottom 10px
        border-radius 20px
        border 1px solid #e2e2e2
        color gray
        font-size 18px
        font-weight 400
        line-height 26px
        text-decoration none
        background-color #fff
        transition: 0.3s
        &:not(:last-child)
            margin-right 10px
        &:hover 
            background-color #f7f7f7

.pagination
    display flex
    align-items center
    justify-content center
    max-width 1518px
    width 100%
    margin 0 auto
    padding 0 39px
    &--position
        margin 18px auto 25px
    &__item 
        display flex
        align-items center
        justify-content center
        flex-shrink 0
        width 47px
        height 47px
        border-radius 50%
        background-color #fff
        color #000
        font-size 20px
        font-weight 400
        line-height 28px
        text-decoration none
        transition: 0.3s ease
        @media phone
            &:nth-child(n+4):nth-child(-n+6)
                display none

        &:hover:not(.pagination__item--active)
            color deep-pink
        &--active
            background-color deep-pink
            color #fff
            cursor default
        &-arrows
            &:hover:not(.pagination__item--disabled)
                svg
                    stroke deep-pink
        &--arrow-left
            margin-right 34px
            @media phone
                margin-right 15px
            svg
                fill none
                stroke black
                stroke-width 2px
                stroke-dasharray 54px
                transition: 0.3s
        &--arrow-right
            margin-left 34px
            @media phone
                margin-left 15px
            svg
                fill none
                stroke black
                stroke-width 2px
                stroke-dasharray 54px
                transition: 0.3s
        &--disabled
            cursor default
            svg
                stroke #e2e2e2


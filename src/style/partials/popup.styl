.hidden-block
    position fixed
    top 0
    left 0
    z-index 1001
    width 0
    height 100vh
    overflow hidden
    transition width 0s 1s ease

    &__background
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color #fff
        opacity 0
        transition opacity 1s 0s ease

    &__close-button
        position absolute
        top 33px
        right 33px
        transform rotate(0deg)
        z-index 1
        width 33px
        height 33px
        background none
        border none
        opacity 0
        visibility hidden
        transition transform .5s 0s ease, opacity .5s 0s ease, visibility 0s .5s linear
        outline none
        cursor pointer

        &:hover
            transform rotate(90deg)

        &::before
            content ""
            position absolute
            top 16px
            left 0
            display block
            width 100%
            height 1px
            background-color #000
            transform rotate(-45deg)

        &::after
            content ""
            position absolute
            top 16px
            left 0
            display block
            width 100%
            height 1px
            background-color #000
            transform rotate(45deg)

    &__container
        position relative
        display flex
        flex-direction column
        align-items center
        justify-content center
        width calc(100% + 17px)
        height 100vh
        overflow-y auto
        overflow-x hidden
        opacity 0
        visibility hidden

    &__popup
        display none

body.js-popup-is-open
    overflow-y hidden

    & .hidden-block
        width 100%
        transition none

        &__background
            opacity 0.95

        &__close-button
            opacity 1
            visibility visible
            transition transform .5s 0s ease, opacity .5s 1s ease, visibility 0s 1s linear

        &__container
            opacity 1
            visibility visible
            transition opacity 1s 1s ease, visibility 0s 1s linear  

        &__wrapper
            opacity 1
            visibility visible
            transition opacity 1s 1s ease, visibility 0s 1s linear

.hidden-block__popup.js-popup-is-active
    display block

/* <-------------------> */
.hidden-block__wrapper
    position fixed
    top 0
    left 0
    display flex
    width 100%
    height 100%
    overflow hidden auto
    opacity: 0;
    visibility: hidden;

.hidden-block__popup 
    position relative
    max-width 628px
    width 100%
    margin auto
    padding 61px 50px
    box-shadow 3px 4px 30px rgba(0, 0, 0, 0.15)
    border-radius 10px
    background-color #ffffff

    @media phone
        padding 61px 32px

.popup 
    &__close-button
        width 21px
        height 21px
        top 30px
        right 30px
        &:before 
            top 10px
        &:after
            top 10px
    &__title 
        margin 0 0 30px
        color #030404
        font-size 48px
        font-weight 400
        line-height 52px

    &__subtitle
        margin 0 0 35px
        letter-spacing -0.36px
        span 
            color #a4023e
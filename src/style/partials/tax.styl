.tax
  &__description
    max-width 1055px
    margin 0 auto 92px
    @media laptop
      max-width 900px
      margin-bottom 76px
  &__forms 
    display flex
    flex-wrap wrap
    margin 0 -18px
    @media tablet-landscape-medium
        margin 0 -16px
    @media tablet-portrait-small
        margin 0 -10px
  &__form-wrap 
    position relative
    flex 0 0 50%
    max-width 50%
    width 100%
    padding 0 18px
    @media tablet-landscape-medium
        padding 0 16px
    @media tablet-portrait-large
      flex 0 0 100%
      max-width 100%
      margin-bottom 32px
    @media tablet-portrait-small
      padding 0 10px
    @media phone 
      margin-bottom 10px 
  

@keyframes spoiler {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}


.tax-accordion
  border-radius 10px
  background-color #f5f5f5
  cursor pointer
  &.opened
    .tax-accordion__head
      padding-bottom 34px
      svg
        transform: rotate(270deg)
    .tax-accordion__title
      border-bottom-color transparent
    .tax-accordion__body 
      display block
      animation: spoiler 1s;
  &__head 
    padding 63px 58px 70px 46px
    display flex
    align-items center
    justify-content space-between
    @media phone
      padding 43px 24px 50px
    svg 
      flex-shrink:0
      fill none
      stroke #030404
      stroke-width 1.2px
      stroke-dasharray 54px
      transform rotate(90deg)
      transition transform 0.3s ease
      @media phone
        width 15px
        height 27px
  &__title 
    max-width 485px
    margin-right 20px
    color black
    font-size 36px
    font-weight 400
    line-height 30px
    border-bottom 1px dotted black
    transition 0.3s ease
    @media phone
      font-size 26px
      line-height 22px
    @media small-phone
      font-size 24px
      line-height 20px
  &__subtitle
    margin 0 0 34px 0
    max-width 485px
    letter-spacing -0.36px
    span 
      color deep-pink
  &__body
    display none
    padding 0 50px 70px 50px
    @media phone
      padding 0 24px 50px
    .form__row:not(:last-child)
      margin 0 0 24px 0
    .form__group--checkbox:not(.form__group--checkbox-dates)
      margin-bottom 40px
    

.breadcrumps 
  &__list
    display flex
    align-items center
    justify-content center
    margin 0
    padding 0
    list-style-type none
  &__item 
    color #afafaf
    font-size 14px
    font-weight 400
    line-height 26px
    &:not(:last-child)
      &:after
        content "/"
        padding 0 8px
  &__link
    border-bottom: 1px solid #afafaf
    color inherit 
    text-decoration none
    transition 0.3s ease
    &:hover 
      border-bottom-color: transparent



.inner-intro
  text-align center
  padding 93px 0 57px
  @media tablet-portrait-large 
    padding 40px 0 57px
  &__breadcrumps
    margin-bottom 21px
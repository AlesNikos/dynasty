.page-404
  max-width 720px
  width 100%
  margin 0 auto
  padding 56px 39px 163px
  text-align center
  @media tablet-landscape-medium
    padding 46px 32px 143px
  @media tablet-portrait-small
    padding 36px 20px 100px
  @media phone 
    padding 0px 20px 40px
  &__number
    margin 0 0 3px 0
    font-size 140px
    font-weight 400
    line-height 144px
    color black
  &__heading
    margin 0 0 35px 0
    font-size 36px
    font-weight 400
    line-height 40px
    color black
  &__desc 
    margin 0 0 24px 0
    letter-spacing -0.36px
  &__link
    color deep-pink
    text-decoration none
    border-bottom 1px solid deep-pink
    transition 0.3s
    &:hover 
      border-bottom-color transparent